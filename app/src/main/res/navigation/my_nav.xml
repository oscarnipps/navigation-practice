<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.navigation_practice.practicewithbasicnavigation.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/navigateToSecondFragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.navigation_practice.practicewithbasicnavigation.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/navigateToFirstFragment"
            app:destination="@id/firstFragment" />
        <argument
            android:name="user"
            app:argType="com.example.navigation_practice.practicewithbasicnavigation.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>