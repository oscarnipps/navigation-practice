<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:onClick="openBasicNavigationDemo"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/raleway_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Navigation "
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="openNavigationDrawerDemo"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/raleway_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navigation with navigation drawer"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="openBottomNavigationViewDemo"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/raleway_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navigation with bottom navigation"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="openViewPagerDemo"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/raleway_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navigation with view pager 2"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>